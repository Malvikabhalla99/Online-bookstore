<body class="whole">
<h1 style="color:whitesmoke; margin:20px; text-align:center"><b>Welcome to Online BOOKstore</b></h1>
  <!-- Material form register -->
  <h3 style="color:crimson; margin:20px;"><strong>New user must signup</strong> </h3>
    
<div class="card sizing">
 
    <h5 class="card-header info-color white-text text-center py-4">
        <strong>Sign up</strong>
    </h5>

    <!--Card content-->
    <br>
    <p id="alerting">
      <strong>
        {{message}}
      </strong>
      
    </p>
    
    <div class="card-body px-lg-5 pt-0">

        <!-- Form -->
        <form  action="/signup" method="POST" class="text-center" style="color: #757575;" onsubmit=" event.preventDefault(); validateMyform();" id="form">

            <div class="form-row">
                <div class="col">
                    <!-- First name -->
                    <div class="md-form">
                        <input type="text" id="usernamefill" class="form-control" placeholder="Username" name="username">
                        <span id="p1">Please fill in the username</span>
                        <br>
                    </div>
                </div>
                
            </div>

            <!-- E-mail -->
            <div class="md-form mt-0">
                <input type="email" id="emailfill" class="form-control" placeholder="E-mail address" name="email">
                 <span id="p2"></span>
              <br>
            </div>

            <!-- Password -->
            <div class="md-form">
                <input type="password" id="passwordfill" class="form-control" aria-describedby="materialRegisterFormPasswordHelpBlock" placeholder="Password" name="password">
                
                <small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
                    At least 8 characters and 1 digit
                </small>
                 <span id="p3"></span>
            </div>

            

            <!-- Sign up button -->
            <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit" id="submitbtnfill" onclick="validateMyform()" >Sign in</button>

            
            <p>By clicking
                <em>Sign up</em> you agree to our
                <a href="" target="_blank">terms of service</a>

        </form>
        <!-- Form -->

    </div>

</div>



